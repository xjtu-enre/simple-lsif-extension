{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/client/out/*"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client LSIF",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--folder-uri=lsif:///Users/thisrabbit/Projects/simple-lsif-extension/samples/jsonrpc.lsif"
			],
			"outFiles": [
				"${workspaceRoot}/client/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server",
			"port": 6029,
			"outFiles": [
				"${workspaceRoot}/server/out/*"
			],
			"sourceMaps": true,
		},
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": [
				"Launch Client LSIF",
				"Attach to Server"
			]
		}
	]
}